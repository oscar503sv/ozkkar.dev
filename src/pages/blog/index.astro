---
import AppLayout from "@layouts/AppLayout.astro";
import BlogCard from "@components/BlogCard.astro";
import Header from "@components/Header.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => new Date() - new Date(a.data.pubDate)
);

const title = "Oscar Aragón - Blog";
const description = "Mi colección personal de fragmentos de código, guías para principiantes, tutoriales y cosas interesantes que he encontrado en la web. Espero que encuentres algo útil aquí.";
---

<AppLayout title={title} description={description}>
  <Header title="Blog" />
  <p
    class="max-w-prose mb-10 font-normal dark:text-zinc-400 text-zinc-600 leading-relaxed"
  >
    {description}
  </p>
  <ul class="space-y-8">
    {
      posts.map((post) => (
        <BlogCard
          title={post.data.title}
          pubDate={post.data.pubDate}
          description={post.data.description}
          url={`/blog/${post.slug}/`}
          tags={post.data.tags}
        />
      ))
    }
  </ul>
</AppLayout>
