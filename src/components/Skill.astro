---
import { Icon as AstroIcon } from "astro-icon/components";

interface Props {
  text: string;
  logo: string;
  key?: string;
}

const { text, logo, key } = Astro.props;
---

<li class="flex items-center space-x-4 text-sm font-medium text-zinc-600 dark:text-zinc-200 hover:text-blue-600 dark:hover:text-blue-400 transition-colors duration-400" key={key}>
  <span
    class="flex items-center justify-center w-10 h-10 rounded bg-zinc-100 dark:bg-zinc-800 lg:bg-opacity-60 dark:bg-opacity-40 lg:backdrop-filter lg:backdrop-blur-sm"
    ><AstroIcon name={logo} class="w-6" />
  </span>
  <span class="dark:text-zinc-400 text-zinc-600">{text}</span>
</li>