# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to be normalized with LF line endings in the repository
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.sh text eol=lf
*.py text eol=lf
*.sql text eol=lf
*.astro text eol=lf
*.jsx text eol=lf
*.vue text eol=lf
*.php text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.gz binary
*.tgz binary
*.tar binary
*.mp3 binary
*.mp4 binary
*.woff binary
